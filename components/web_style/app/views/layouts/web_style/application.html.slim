|<!DOCTYPE html>
html
  head
    meta charset="utf-8"
    meta name="viewport" content="width=device-width, initial-scale=1.0"

    title Sportsball App

    = javascript_include_tag "web_style/application"
    = stylesheet_link_tag    "web_style/application", media: "all"

    = csrf_meta_tags

  header
    .contain-to-grid.sticky
      nav.top-bar data-topbar="" role="navigation"
        ul.title-area
          li.name
            h1
              = link_to main_app.root_path do
                = image_tag "web_style/logo.png", width: "25px"
                | Predictor

          li.toggle-topbar.menu-icon
            a href="#"
              span Menu

        section.top-bar-section
          ul.left
            li =link_to "Teams", "/teams_ui/teams"
            li =link_to "Games", "/web_ui/games"
            li =link_to "Predictions", "/web_ui/prediction/new"

  main
    .row
      .small-12.columns
        = yield
